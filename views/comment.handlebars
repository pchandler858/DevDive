<body class="">

  <div class="min-h-screen py-6 flex flex-col sm:py-12">
    <div class="bg-white rounded-lg shadow-md mb-8 lg:w-full w-11/12 mx-auto">
      <div
        class="flex items-center justify-between bg-gray-800 px-4 py-2 rounded-t-lg"
      >
        <div class="flex items-center">
          <h2
            class="text-xl font-bold text-white relative mr-2 cursor-default"
          >{{title}}</h2>
        </div>
        <p class="text-gray-300 text-sm">Posted by
          {{user.name}}
          on
          {{format_date post_date}}
        </p>
      </div>
      <div class="p-4 pt-4">
        <p class="text-gray-800">{{post}}</p>
      </div>
    </div>
    <div class="mt-4 bg-gray-200 px-4 py-4 rounded-lg w-11/12 mx-auto">
      <h3 class="text-lg font-semibold pb-1">Add Comment</h3>
      <p class="text-gray-800">Commenting on: {{blogPost.title}}</p>
      <form
        class="comment-form"
        action="/comment/{{blogPost.id}}"
        method="POST"
      >
        <textarea
          class="w-full border border-gray-300 p-2 rounded-lg"
          name="comment_text"
          rows="4"
          placeholder="Enter your comment"
          required
        ></textarea>
        <input type="hidden" name="blogpost_id" value="{{blogPost.id}}" />
        <div class="flex justify-center mt-4">
          <button
            type="submit"
            class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-2"
          >
            Submit Comment
          </button>
        </div>
                <div class="flex justify-center mt-4">
          <a href="/" class="text-purple-700 hover:underline flex items-center">

            Return to homepage
          </a>
      </form>

    </div>
  </div>

  <script src="/js/comment.js"></script>
</body>