<html>
  <head>
    <title>Dev Dive</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Special+Elite&display=swap"
      rel="stylesheet"
    />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="overflow-y-auto bg-gray-400">
    <div class="bg-gradient-to-r from-indigo-800 to-purple-900">
      <div
        class="container mx-auto flex items-center justify-between p-4 google"
      >
        <h1 class="text-4xl text-slate-100 font-bold">Dev Dive</h1>
        <nav class="flex space-x-4">
          {{! If the user is logged in, show the logout button instead of the login button }}
          {{#if loggedIn}}
            <a href="/" class="text-slate-100 font-bold">Home</a>
            <a href="/dashboard" class="text-slate-100 font-bold">Dashboard</a>

            <a href="#" id="logout" class="text-slate-100 font-bold">Logout</a>
          {{else}}
            <a href="/" class="text-slate-100 font-bold">Home</a>
            <a href="/dashboard" class="text-slate-100 font-bold">Dashboard</a>
            <a
              href="/login"
              class="text-slate-100 font-bold"
              id="nav-login"
            >Login</a>
          {{/if}}
        </nav>
      </div>
    </div>
    <div class="container mx-auto">
      {{{body}}}
    </div>
  </body>
</html>